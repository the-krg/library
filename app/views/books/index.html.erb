<p id="notice"><%= notice %></p>

<h1>Books</h1>

<h4><%= link_to 'New Book', new_book_path %></h4>
<div class="table-wrapper">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Book genre</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% available_books.each do |book| %>
        <tr>
          <td><%= book.name %></td>
          <td><%= book.description %></td>
          <td><%= genre_name(book.book_genre_id) %></td>
          <td><%= link_to 'Show', book %></td>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
          <td><%= link_to 'Rent', new_rental_path(book_id: book.id) %></td>
        </tr>
      <% end %>
      <% unavailable_books.each do |book| %>
        <tr class="unavailable">
          <td><%= book.name %></td>
          <td><%= book.description %></td>
          <td><%= genre_name(book.book_genre_id) %></td>
          <td><%= link_to 'Show', book %></td>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
