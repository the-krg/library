<h1>Welcome!</h1>
<h2>Current Borrowed Books:</h2>
<table>
  <thead>
    <tr>
      <th>Book Name</th>
      <th>Borrowed By</th>
      <th>Borrow Date</th>
      <th>Return Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rentals.each do |rental| %>
      <tr>
        <td><%= rental.book.name %></td>
        <td><%= rental.user.first_name %></td>
        <td><%= rental.borrow_date %></td>
        <td><%= rental.return_date %></td>
        <td><%= link_to 'Show', rental %></td>
        <td><%= link_to 'Edit', edit_rental_path(rental) %></td>
        <td><%= link_to 'Destroy', rental, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
